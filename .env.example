# Environment Variables Template for Science Card Improvement Project
# Copy this file to .env and fill in your actual values

# Hugging Face Configuration
# Get your token from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_TOKEN=your_huggingface_token_here
HF_TOKEN=your_huggingface_token_here

# Optional: Hugging Face Hub Configuration
HF_HUB_CACHE=~/.cache/huggingface
HF_DATASETS_CACHE=~/.cache/huggingface/datasets

# Project Configuration
PROJECT_NAME=science-card-improvement
ENVIRONMENT=development
LOG_LEVEL=INFO

# API Configuration (if needed for future features)
API_HOST=localhost
API_PORT=8000
API_DEBUG=true

# Database Configuration (if needed for future features)
DATABASE_URL=sqlite:///./science_cards.db

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
